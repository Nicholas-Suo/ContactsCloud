<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud_bg"
    >


   <RelativeLayout
       android:id ="@+id/sync_top_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_marginTop="@dimen/sync_image_view_top_margin"
       >
       <TextView
           android:id="@+id/sync_contact_textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/sync_contact_title"
           android:textColor="@color/colorWhite"
           android:textSize="@dimen/title_size"
           android:gravity="center_horizontal"
           />
       <ImageView
          android:id="@+id/sync_image_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/sync_button_bg"
          android:clickable="true"
          android:layout_below="@+id/sync_contact_textView"
          android:layout_marginTop="@dimen/sync_contact_top_margin_img"
           android:layout_centerInParent="true"
       />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/sync_contact"
          android:layout_below="@+id/sync_image_view"
          android:layout_marginTop="@dimen/sync_contact_top_margin"
          android:textColor="@color/colorWhite"
          android:gravity="center_horizontal"
          />
   </RelativeLayout>

   <ListView
       android:id="@+id/main_list_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/sync_top_layout"
       android:layout_marginTop="@dimen/menu_list_top_margin"
       android:divider="@null"

       />
</RelativeLayout>